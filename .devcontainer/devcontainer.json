{
    "name": "Hugo Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".",
         "options": [
            "--network=host"
         ]
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "bradlc.vscode-tailwindcss",
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "runArgs": [
        "--privileged",
        "--network=host"
    ],
    "containerEnv": {
        "http_proxy": "${localEnv:http_proxy}",
        "https_proxy": "${localEnv:https_proxy}",
        "no_proxy": "${localEnv:no_proxy}"
    }
}