{{- /* 输出整站页面列表为 JSON，包含 title/url/plain content/section/lastmod/uid */ -}}
{{- $items := slice -}}
{{- range .Site.RegularPages -}}
  {{- $item := dict
      "title" .Title
      "url" .RelPermalink
      "content" .Plain
      "section" .Section
      "lastmod" (.Lastmod.Format "2006-01-02T15:04:05Z07:00")
      "uid" .File.UniqueID
    -}}
  {{- $items = $items | append $item -}}
{{- end -}}
{{- $items | jsonify -}}